body {
  font-family:  "MicroSoft YaHei", BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
  color: #333
  font-size 14px
  line-height: 1.4em;
  font-weight: 300;
  font-feature-settings: "tnum";
  font-variant: tabular-nums;
}

.feature p, .page p, ol, ul, li {
  word-break: break-all;
  text-align: justify;
  font-weight: 300;
}

ol, p, ul {
  line-height: 1.4em;
}

code {
  font-family: 'MicroSoft YaHei';
}

